<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/publish.min.css">
    <title>goodSummaries</title>
</head>
<body>
    <%-include("partials/header.ejs")%>
    <main class="contentPadding">
        <form action="/publish" method="POST" enctype="multipart/form-data">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" required>
            <label for="cover">cover</label>
            <input type="file" name="cover" id="cover" required>
            <!--
            <div class="summaryBox">
                <ul class="writeReadOptions">
                    <li data-type = "content" class="option ">Edit</li>
                    <li data-type = "contentBox" class="option active preview">Preview</li>
                </ul>
                -->
            <div class="contentBox">
                <div>
                    <label for="summary">Summary</label>
                    <textarea name="content" id="content" cols="40" rows="14" class="area" required></textarea>
                </div>
                <table class="markDown">
                    <tr>
                        <td>
                            # Header
                            <br>
                            ...
                            <br>
                            ###### Header
                        </td>
                        <td>
                            H1 Header
                            <br>
                            ...
                            <br>
                            H6 Header
                        </td>
                    </tr>
                    <tr>
                        <td>
                            *italics* 
                        </td>
                        <td>
                            <i>italics</i>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            **bold**
                        </td>
                        <td>
                            <strong>bold</strong>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            *  item 1
                            <br>
                            *  item 2
                        </td>
                        <td>
                            item 1
                            <br>
                            item 2
                        </td>
                    </tr>
                    <tr>
                        <td>
                            1. item 1
                            <br>
                            2. item 2
                        </td>
                        <td>
                            item 1
                            <br>
                            item 2
                        </td>
                    </tr>
                    <tr>
                        <td>
                            > quoted text
                        </td>
                        <td>
                          
                        </td>
                    </tr>
                    <tr>
                        <td>[displayed text](https://...)</td>
                        <td class="img"><img src="https://i.pinimg.com/originals/d8/45/a6/d845a62aa58d472ee0557f3de8ce7e90.jpg" alt=""></td>
                    </tr>
                </table>
            </div>
            <label for="category">Category</label>
            <select name="category" id="category">
                <option value="Culture">Culture</option>
                <option value="Art">Art</option>
                <option value="Computer">Computer science</option>
                <option value="Literary">Literary</option>
                <option value=""></option>
                <option value=""></option>
                <option value=""></option>
            </select>
            <button type="submit">Submit</button>
        </form>
    </main>    
    <%-include("partials/footer.ejs")%>
    <script>
        let Options = document.querySelectorAll(".option")
        let areas = document.querySelectorAll(".area")
        console.log(Options);
        Options.forEach(option => {
            option.addEventListener("click", () => {
                let area = document.getElementById(option.dataset.type)
                Options.forEach(option => {
                    option.classList.remove("active")
                })
                option.classList.add("active")
                areas.forEach(area => {
                    area.classList.add("none");
                })
                area.classList.remove("none")
            })
        });
    </script>
    <script src="js/markdown.js"></script>
</body>
</html>